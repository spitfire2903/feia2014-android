<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redBrownColor"
	 >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.6"
        android:scaleType="fitXY"
        android:src="@drawable/bkg_moldura" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/partnerMarginTopBottom"
        android:layout_marginLeft="@dimen/partnerMarginLeftRight"
        android:layout_marginRight="@dimen/partnerMarginLeftRight"
        android:layout_marginTop="@dimen/partnerMarginTopBottom" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <br.com.sevencode.android.feia2014.components.SCTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/partner_text"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>